#Ecualización y crossover

#XO Botón azul
begin
    prog = irexec
    button = KEY_BLUE
    button = 1
	config = ~/bin/control 'xo lp'
	flags = quit
end
begin
    prog = irexec
    button = KEY_BLUE
    button = 2
	config = ~/bin/control 'xo mp'
	flags = quit
end

