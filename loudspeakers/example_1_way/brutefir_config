## filters



#EQ

filter "f.eq.L" {
	from_inputs:  "L";
	to_filters:   "f.drc.L","f.drc.R";
	coeff:        "c.eq";
};

filter "f.eq.R" {
	from_inputs:  "R";
	to_filters:   "f.drc.R","f.drc.L";
	coeff:        "c.eq";
};

# DRC

filter "f.drc.L" {
	from_filters: "f.eq.L"//1,"f.eq.R"//0;
	to_filters:   "f.fr.L";
	coeff:        -1;
};

filter "f.drc.R" {
	from_filters: "f.eq.R"//1,"f.eq.L"//0;
	to_filters:   "f.fr.R";
    # starts without DRC EQ
	coeff:        -1;
};

# XO

filter "f.fr.L" {
	from_filters: "f.drc.L";
	to_outputs:   "fr.L"/0.0/1;
    # starts with mp XO-EQ
	coeff:        "c.xo.mp.fr.L";
};

filter "f.fr.R" {
	from_filters: "f.drc.R";
	to_outputs:   "fr.R"/0.0/1;
    # starts with mp XO-EQ
	coeff:        "c.xo.mp.fr.R";
};
