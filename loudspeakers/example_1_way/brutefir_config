	shared_mem:  false;
	attenuation: 0;
};

coeff "c.xo.mp.fr.R" {
	filename:    "xo-mp-fr-R.pcm";
	format:      "FLOAT_LE";
	shared_mem:  false;
	attenuation: 0;
};

